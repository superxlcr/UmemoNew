<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/add_groups_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/add_groups"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:background="@drawable/menu_btn_style"
                android:clickable="true"
                android:gravity="center"
                android:onClick="addGroups"
                android:text="@string/add_groups"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#424141"
                android:visibility="gone" />

            <Button
                android:id="@+id/new_groups"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:background="@drawable/menu_btn_style"
                android:gravity="center"
                android:text="@string/new_groups"
                android:textColor="#ffffff" />
        </LinearLayout>

        <ListView
            android:id="@+id/groupsListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/divider_color"
            android:dividerHeight="2dp" />
    </LinearLayout>

</RelativeLayout>